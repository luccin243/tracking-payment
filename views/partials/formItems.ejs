<script>
  const check = document.querySelector('#check').checked;
  const date = document.querySelector('#date').style;
  const montant = document.querySelector('#montant').style;
  const onYesClick = () => {
    date.display = 'block';
    montant.display = 'block';
  };
  const onNoClick = () => {
    date.display = 'none';
    montant.display = 'none';
  };
  console.log(date);
</script>

