<!-- start select 1-->
<div class="card">
  <div class="card-body">
    <% if(locals.flash){%>
    <div
      class="alert alert-<%=(Object.keys(locals.flash)[0]=='Error') ? 'danger' : 'success' %> alert-dismissible fade show"
      role="alert"
    >
      <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
      ></button>
      <strong><%= Object.keys(locals.flash)[0] %> !</strong>
      <%=locals.flash.Error || locals.flash.Success%>
    </div>
    <%}%>
    <form action="/create/form" method="POST">
      <div class="row">
        <div class="col-lg-12">
          <!--Nanem -->
          <div class="mb-3">
            <label class="form-label"
              >Selectionnez votre nom sur la liste</label
            >
            <select class="form-control select2" name="name">
              <option>Cliquer pour selectionner</option>
              <% data.forEach(el => { %>
              <option value="<%=el.firstName%> <%=el.lastName%>">
                <%=el.firstName%> <%=el.lastName%>
              </option>
              <% }) %>
            </select>
          </div>
          <!-- Fonds -->
          <div class="mb-3">
            <label class="form-label"
              >Selectionnez les fonds que vous avez réceptionnés et pour lequel
              vous soumettez</label
            >
            <select class="form-control select2" name="fond">
              <option>Cliquer pour selectionner</option>
              <% data3.forEach(el => { %>
              <option value="<%=el.payment%>"><%=el.payment%></option>
              <% }) %>
            </select>
          </div>
          <!-- Payement-->
          <div class="mb-3">
            <label class="form-label"
              >Avez-vous reçu le paiement sélectionné OUI ou NON ?</label
            >
            <div class="form-check mb-3">
              <input
                class="form-check-input"
                type="radio"
                name="payment"
                value="Oui"
                onclick="onYesClick()"
                id="check"
                checked
              />
              <label class="form-check-label" for="formRadios1"> Oui </label>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                value="Non"
                onclick="onNoClick()"
                name="payment"
                id="check2"
              />
              <label class="form-check-label" for="formRadios2"> Non </label>
            </div>
          </div>
          <!-- Bank-->
          <div class="mb-3">
            <label class="form-label" for="default-input"
              >Dites-nous votre banque svp !</label
            >
            <input
              class="form-control"
              type="text"
              id="default-input"
              name="bank"
              placeholder="Votre bank"
            />
          </div>
          <!-- Montant-->
          <div class="mb-3" id="montant">
            <label class="form-label"
              >Montant reçu pour l'option sélectionnée</label
            >
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">$</div>
              </div>
              <input type="number" class="form-control" name="montant"
              id="montant placeholder="Montant" />
            </div>
          </div>
          <!-- Date-->
          <div class="mb-3" id="date">
            <label class="form-label">Date de reception</label>
            <div class="input-group" id="datepicker2">
              <input
                type="text"
                class="form-control"
                placeholder="dd M, yyyy"
                name="date"
                data-date-format="dd M, yyyy"
                data-date-container="#datepicker2"
                data-provide="datepicker"
                data-date-autoclose="true"
              />

              <span class="input-group-text"
                ><i class="mdi mdi-calendar"></i
              ></span>
            </div>
            <!-- input-group -->
          </div>
          <!-- Commentaire-->
          <div class="mb-3">
            <label class="form-label" for="default-input"
              >Des commentaires ?</label
            >
            <textarea
              class="form-control"
              rows="3"
              name="comment"
              placeholder="Votre commentaire"
            ></textarea>
          </div>
          <!-- Submit-->
          <div class="mb-3">
            <button
              type="submit"
              class="btn btn-primary waves-effect waves-light"
            >
              Envoyez <i class="uil uil-arrow-right ms-2"></i>
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- end select 1 -->

