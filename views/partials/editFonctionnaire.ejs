<!--  Extra Large modal example -->
<div
  class="modal fade edit"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myExtraLargeModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-md modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">
          Edit cartographe
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12" style="padding: 10px 40px">
            <div
              class="alert alert-success alert-dismissible fade show hidden"
              role="alert"
              id="update"
            >
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
              <strong>Updated with success !</strong>
            </div>
            <form id="form">
              <!-- First Name -->
              <div class="mb-3 row">
                <label for="example-text-input" class="col-md-2 col-form-label"
                  >Nom</label
                >
                <div class="col-md-10">
                  <input
                    class="form-control"
                    type="text"
                    placeholder="Luccin"
                    name="firstName"
                    id="firstName"
                    required
                  />
                </div>
              </div>
              <!-- Last Name -->
              <div class="mb-3 row">
                <label for="example-text-input" class="col-md-2 col-form-label"
                  >Postnom</label
                >
                <div class="col-md-10">
                  <input
                    class="form-control"
                    name="lastName"
                    type="text"
                    placeholder="Masirika"
                    id="lastName"
                    required
                  />
                </div>
              </div>

              <!-- Fonction -->
              <div class="mb-3 row">
                <label for="example-text-input" class="col-md-2 col-form-label"
                  >Fonction</label
                >
                <div class="col-md-10">
                  <select
                    class="form-control select2"
                    name="fonction"
                    id="fonction"
                    style="width: 100%"
                    required
                  >
                    <option value="" id="selected">
                      Cliquer pour selectionner
                    </option>
                    <% data2.forEach(el3 => { %>
                    <option value="<%=el3.name%>"><%=el3.name%></option>
                    <% }) %>
                  </select>
                </div>
              </div>

              <!-- Submit-->
              <div class="mb-3 row">
                <label
                  for="example-text-input"
                  class="col-md-2 col-form-label"
                ></label>
                <div class="col-md-10">
                  <button
                    type="submit"
                    id="noLoader2"
                    class="btn btn-primary w-md"
                  >
                    Submit
                  </button>
                  <button
                    class="btn btn-primary hidden"
                    type="button"
                    id="loader2"
                    disabled
                  >
                    <span
                      class="spinner-border spinner-border-sm"
                      role="status"
                      aria-hidden="true"
                    ></span>
                    Loading...
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- end row -->
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

