            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

              <div class="page-content">
                  <div class="container-fluid">

                      <!-- start page title -->
                      <div class="row">
                          <div class="col-12">
                              <div class="page-title-box d-flex align-items-center justify-content-between">
                                  <h4 class="mb-0">Liste de lettres d'instruction</h4>

                              </div>
                          </div>
                      </div>
                      <!-- End page title -->

                      <!-- Start Instruction list-->
                      <div class="row">
                        <div class="col-lg-12">

                          <% if(locals.flash){%>
                            <div
                              class="alert alert-<%=(Object.keys(locals.flash)[0]=='Error') ? 'danger' : 'success' %> alert-dismissible fade show"
                              role="alert"
                            >
                              <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="alert"
                                aria-label="Close"
                              ></button>
                              <strong><%= Object.keys(locals.flash)[0] %> !</strong>
                              <%=locals.flash.Error || locals.flash.Success%>
                            </div>
                            <%}%>

                            <div class="table-responsive mb-4">
                                <table class="table table-centered datatable dt-responsive nowrap table-card-list" style="border-collapse: collapse; border-spacing: 0 12px; width: 100%;">
                                    <thead>
                                            <th>#</th>
                                            <th>Date</th>
                                            <th>Montant</th>
                                            <th>Etat</th>
                                            <th>Agent</th>
                                            <th>Libellé</th>
                                            <th>Description</th>
                                            <th style="width: 120px;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                       <% data.forEach((el, index) => { %>
                                        <tr>
                                          <td><a href="javascript: void(0);" class="text-dark fw-bold">IL0<%=index + 1 %> </a> </td>
                                          <td>
                                              <%=el.date%>
                                          </td>
                                          <td>
                                            <%=el.montant%>$
                                          </td>

                                          <td>
                                            <div class="badge bg-soft-<%=el.payment === 'Non' ? 'danger':'success'%> font-size-12"><%=el.payment === 'Non' ? 'Pas payé':'Payé'%> </div>
                                          </td>
                                          <td><%=(el.agent).substring(0,10)%>...</td>
                                          <td><%=el.libelle%></td>
                                          <td><%=(el.agent).substring(0,30)%>...</td>

                                          <td>
                                              <a href="javascript:void(0);" class="px-3 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                              <a href="javascript:void(0);" class="px-3 text-danger"><i class="uil uil-trash-alt font-size-18"></i></a>
                                              <button type="button" data-bs-toggle="modal" data-bs-target=".instructionPaid" class="btn btn-primary btn-sm btn-rounded waves-effect waves-light">Preview <i class="fas fa-eye"></i></button>
                                          </td>
                                      </tr>
                                       <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                      <!-- End Instruction list-->

                      <%- include('./instructionNopaid.ejs') %>
                      <%- include('./instructionPaid.ejs') %>

                  </div>
                  <!-- end row -->

                  </div> <!-- container-fluid -->
              </div>
              <!-- End Page-content -->

             <!-- Footer-->
             <%- include('./footer.ejs') %>
          </div>
          <!-- end main content-->

      </div>
      <!-- END layout-wrapper -->

      <!-- JAVASCRIPT -->
      <script src="/assets/libs/jquery/jquery.min.js"></script>
      <script src="/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
      <script src="/assets/libs/metismenu/metisMenu.min.js"></script>
      <script src="/assets/libs/simplebar/simplebar.min.js"></script>
      <script src="/assets/libs/node-waves/waves.min.js"></script>
      <script src="/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
      <script src="/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>

      <!-- bootstrap datepicker -->
      <script src="/assets/libs/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

      <!-- Required datatable js -->
      <script src="/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
      <script src="/assets/libs/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>

      <!-- Responsive examples -->
      <script src="/assets/libs/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
      <script src="/assets/libs/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>

      <!-- init js -->
      <script src="/assets/js/pages/ecommerce-datatables.init.js"></script>

