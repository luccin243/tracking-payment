<!--  Extra Large modal example -->
<div
  class="modal fade edit"
  tabindex="-1"
  role="dialog"
  aria-labelledby="myExtraLargeModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title mt-0" id="myExtraLargeModalLabel">
          Edit paiement
        </h5>

        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-lg-12" style="padding: 10px 40px">
            <div
              class="alert alert-success alert-dismissible fade show hidden"
              role="alert"
              id="update"
            >
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="alert"
                aria-label="Close"
              ></button>
              <strong>Updated with success !</strong>
            </div>

            <form action="/update/instruction" method="POST">
              <div class="row">
                <div class="col-lg-12">
                   <!-- Date-->
                   <div class="mb-3" id="date">
                    <label class="form-label">Date d'emission</label>
                    <div class="input-group" id="datepicker2">
                      <input
                        type="text"
                        class="form-control"
                        placeholder="dd M, yyyy"
                        data-date-format="dd M, yyyy"
                        data-date-container="#datepicker2"
                        data-provide="datepicker"
                        name="date"
                        data-date-autoclose="true"
                      />

                      <span class="input-group-text"
                        ><i class="mdi mdi-calendar"></i
                      ></span>
                    </div>
                    <!-- input-group -->
                  </div>

                  <!-- Montant-->
                  <div class="mb-3" id="montant">
                    <label class="form-label"
                      >Montant de la lettre d'instruction</label
                    >
                    <div class="input-group mb-2">
                      <div class="input-group-prepend">
                        <div class="input-group-text">$</div>
                      </div>
                      <input
                        type="number"
                        class="form-control"
                        name="montant"
                        id="inlineFormInputGroup"
                        placeholder="Montant"
                      />
                    </div>
                  </div>

                  <!--List Agent -->
                  <div class="mb-3">
                    <label class="form-label"
                      >Agent d'affectation</label
                    >
                    <select class="form-control select2" name="agent">
                      <option>Cliquer pour selectionner un agent</option>
                      <% data.forEach(el => { %>
                        <option value="<%=el.firstName%> <%=el.lastName%>"><%=el.firstName%> <%=el.lastName%></option>
                      <% }) %>
                    </select>
                  </div>

                  <!-- Libele-->
                  <div class="mb-3">
                    <label class="form-label" for="default-input"
                      >Libellé</label
                    >
                    <input
                      class="form-control"
                      type="text"
                      id="default-input"
                      name="libelle"
                      placeholder="Libellé"
                    />
                  </div>

                  <!-- Déscription-->
                  <div class="mb-3">
                    <label class="form-label" for="default-input"
                      >Description</label
                    >
                    <textarea
                      class="form-control"
                      rows="3"
                      name="description"
                      placeholder="Description"
                    ></textarea>
                  </div>

                  <!-- Submit-->
                  <div class="mb-3">
                    <button
                      type="submit"
                      class="btn btn-primary waves-effect waves-light"
                    >
                      Enregistrer <i class="uil uil-arrow-right ms-2"></i>
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <!-- end row -->
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

