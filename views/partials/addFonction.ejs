                                  <form id="add">

                                <!-- Fonction -->
                                <div class="mb-3 row">
                                  <label for="example-text-input" class="col-md-2 col-form-label">Fonction</label>
                                  <div class="col-md-10">
                                      <input class="form-control" name="name" type="text" placeholder="Gestionnaire" id="name">
