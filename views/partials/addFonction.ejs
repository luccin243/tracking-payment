       <script>
         // CREATE ELEMENT
         $(document).ready(function () {
          $("#add").submit(function (event) {
                    var formData = {
                        name: $("#name").val()
                    };

                    $.ajax({
                    type: "POST",
                    url: "/fonction/create",
                    data: formData,
                    dataType: "json",
                    encode: true,
                    }).done(function (data) {
                        console.log(data)
                        $('#alert').addClass('show')
                        $('#refresh').load(document.URL +  ' #refresh');
                    });

                    event.preventDefault();
                });

         });

       </script>

       <script>
        $(document).ready(function () {

          // GET BY ID CLICK
          $('body').on('click', '.update',function(){
              const id =  $(this).attr('data-id');
              const API = $(this).attr('data-api');

              //GET ELEMENTS
              $.get(`${API.trim()}/fonction/${id}`, function(data, status){
                document.getElementById("name").value = data.name;

                //UPDATE ELEMENTS
                $("#form").submit(function (event) {
                    var formData = {
                        name: $("#name").val()
                    };

                    $.ajax({
                    type: "POST",
                    url: `${API.trim()}/fonction/${id}?_method=PUT`,
                    data: formData,
                    dataType: "json",
                    encode: true,
                    }).done(function (data) {
                        $('#alert').addClass('show')
                        $('#refresh').load(document.URL +  ' #refresh');
                    });

                    event.preventDefault();
                });

              });
              });

              //DELETE FORM
              $('body').on('click', '.remove',function(){
              const id =  $(this).attr('data-id');
              const API = $(this).attr('data-api');
              $.post(`${API.trim()}/fonction/${id}?_method=DELETE`, function(data, status){
                console.log(data)
                $('#alert').addClass('show')
                $('#refresh').load(document.URL +  ' #refresh');
              });
              });

        });
        </script>
