            <div class="main-content">

              <div class="page-content">
                  <div class="container-fluid">

                      <!-- start page title -->
                      <div class="row">
                          <div class="col-12">
                              <div class="page-title-box d-flex align-items-center justify-content-between">
                                  <h4 class="mb-0">Instructions</h4>

                              </div>
                          </div>
                      </div>
                      <!-- end page title -->
                      <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">

                                    <h4 class="card-title">Ajoutez une lettre d'instruction</h4>
                                    <div class="mb-3 row"></div>
                                    <form action="/create/instruction/60578cae99564a53e3bf0dc0" method="POST">
                                      <div class="row">
                                        <div class="col-lg-12">
                                           <!-- Date-->
                                           <div class="mb-3" id="date">
                                            <label class="form-label">Date d'emission</label>
                                            <div class="input-group" id="datepicker2">
                                              <input
                                                type="text"
                                                class="form-control"
                                                placeholder="dd M, yyyy"
                                                data-date-format="dd M, yyyy"
                                                data-date-container="#datepicker2"
                                                data-provide="datepicker"
                                                name="date"
                                                data-date-autoclose="true"
                                              />

                                              <span class="input-group-text"
                                                ><i class="mdi mdi-calendar"></i
                                              ></span>
                                            </div>
                                            <!-- input-group -->
                                          </div>

                                          <!-- Montant-->
                                          <div class="mb-3" id="montant">
                                            <label class="form-label"
                                              >Montant de la lettre d'instruction</label
                                            >
                                            <div class="input-group mb-2">
                                              <div class="input-group-prepend">
                                                <div class="input-group-text">$</div>
                                              </div>
                                              <input
                                                type="number"
                                                class="form-control"
                                                name="montant"
                                                id="inlineFormInputGroup"
                                                placeholder="Montant"
                                              />
                                            </div>
                                          </div>

                                          <!--List Agent -->
                                          <div class="mb-3">
                                            <label class="form-label"
                                              >Agent d'affectation</label
                                            >
                                            <select class="form-control select2" name="agent">
                                              <option>Cliquer pour selectionner un agent</option>
                                              <% data.forEach(el => { %>
                                                <option value="<%=el.firstName%> <%=el.lastName%>"><%=el.firstName%> <%=el.lastName%></option>
                                              <% }) %>
                                            </select>
                                          </div>

                                          <!-- Libele-->
                                          <div class="mb-3">
                                            <label class="form-label" for="default-input"
                                              >Libellé</label
                                            >
                                            <input
                                              class="form-control"
                                              type="text"
                                              id="default-input"
                                              name="libelle"
                                              placeholder="Libellé"
                                            />
                                          </div>

                                          <!-- Déscription-->
                                          <div class="mb-3">
                                            <label class="form-label" for="default-input"
                                              >Description</label
                                            >
                                            <textarea
                                              class="form-control"
                                              rows="3"
                                              name="description"
                                              placeholder="Description"
                                            ></textarea>
                                          </div>

                                          <!-- Submit-->
                                          <div class="mb-3">
                                            <button
                                              type="submit"
                                              class="btn btn-primary waves-effect waves-light"
                                            >
                                              Enregistrer <i class="uil uil-arrow-right ms-2"></i>
                                            </button>
                                          </div>
                                        </div>
                                      </div>
                                    </form>
                            </div>
                        </div>
                            </div>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                  </div> <!-- container-fluid -->
              </div>
              <!-- End Page-content -->

             <!-- Footer-->
             <%- include('./footer.ejs') %>
          </div>
          <!-- end main content-->

      </div>
