            <!-- Start right Content here -->
            <!-- ============================================================== -->
            <div class="main-content">

              <div class="page-content">
                  <div class="container-fluid">

                      <!-- start page title -->
                      <div class="row">
                          <div class="col-12">
                              <div class="page-title-box d-flex align-items-center justify-content-between">
                                  <h4 class="mb-0">Autres paiements</h4>
                              </div>
                          </div>
                      </div>
                      <!-- end page title -->
                      <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">

                                    <h4 class="card-title">Ajoutez Lorem, ipsum dolor.</h4>
                                    <div class="mb-3 row"></div>
                                    <form>
                                      <div class="row">
                                        <div class="col-lg-12">

                                          <!-- Type de paiement -->
                                          <div class="mb-3">
                                            <label class="form-label"
                                              >Selectionnez de paiement</label
                                            >
                                            <select class="form-control select2" name="fond">
                                              <option>Cliquer pour selectionner</option>
                                              <option value="AK">Salaire (Phase 1)</option>
                                              <option value="AK">Salaire (Phase 2)</option>
                                              <option value="AK">Perdiem (Phase 2)</option>
                                              <option value="AK">Perdiem (Phase 3)</option>
                                              <option value="HI">
                                                Frais internet et communication (Phase 3)
                                              </option>
                                            </select>
                                          </div>

                                          <!-- Montant-->
                                          <div class="mb-3" id="montant">
                                            <label class="form-label"
                                              >Montant du paiement</label
                                            >
                                            <div class="input-group mb-2">
                                              <div class="input-group-prepend">
                                                <div class="input-group-text">$</div>
                                              </div>
                                              <input
                                                type="number"
                                                class="form-control"
                                                name="montant"
                                                id="inlineFormInputGroup"
                                                placeholder="Montant"
                                              />
                                            </div>
                                          </div>

                                          <!-- Refference -->
                                          <div class="mb-3">
                                            <label class="form-label" for="default-input"
                                              >Réfference de paiement</label>
                                            <input
                                              class="form-control"
                                              type="text"
                                              id="default-input"
                                              name="refference"
                                              placeholder="Réfference"
                                            />
                                          </div>

                                          <!-- Libele -->
                                          <div class="mb-3">
                                            <label class="form-label" for="default-input"
                                              >Libellé de paiement</label>
                                            <input
                                              class="form-control"
                                              type="text"
                                              id="default-input"
                                              name="libele"
                                              placeholder="Libellé"
                                            />
                                          </div>

                                          <!--List Agent -->
                                          <div class="mb-3">
                                            <label class="form-label"
                                              >Bénéficiaire</label
                                            >
                                            <select class="form-control select2" name="name">
                                              <option>Cliquer pour selectionner un agent</option>
                                              <option value="AK">Luccin Masirika</option>
                                              <option value="HI">Nicolas Tesla</option>
                                              <option value="HI">Isaac Newton</option>
                                              <option value="HI">Albert Einstein</option>
                                            </select>
                                          </div>

                                          <!-- Province -->
                                          <div class="mb-3">
                                            <label class="form-label"
                                              >Selectionnez la province</label
                                            >
                                            <select class="form-control select2" name="fond">
                                              <option>Cliquer pour selectionner</option>
                                              <% provinces.forEach(element => { %>
                                                <option value="<%=element%>"><%=element%></option>
                                              <% }) %>
                                            </select>
                                          </div>

                                           <!-- Date-->
                                           <div class="mb-3" id="date">
                                            <label class="form-label">Date de paiement</label>
                                            <div class="input-group" id="datepicker2">
                                              <input
                                                type="text"
                                                class="form-control"
                                                placeholder="dd M, yyyy"
                                                data-date-format="dd M, yyyy"
                                                data-date-container="#datepicker2"
                                                data-provide="datepicker"
                                                data-date-autoclose="true"
                                              />

                                              <span class="input-group-text"
                                                ><i class="mdi mdi-calendar"></i
                                              ></span>
                                            </div>
                                            <!-- input-group -->
                                          </div>

                                          <!-- Description -->
                                          <div class="mb-3">
                                            <label class="form-label" for="default-input"
                                              >Description</label
                                            >
                                            <textarea
                                              class="form-control"
                                              rows="3"
                                              name="comment"
                                              placeholder="Description"
                                            ></textarea>
                                          </div>


                                          <!-- Submit-->
                                          <div class="mb-3">
                                            <button
                                              type="button"
                                              class="btn btn-primary waves-effect waves-light"
                                            >
                                              Submit <i class="uil uil-arrow-right ms-2"></i>
                                            </button>
                                          </div>
                                        </div>
                                      </div>
                                    </form>
                            </div>
                        </div>
                            </div>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                  </div> <!-- container-fluid -->
              </div>
              <!-- End Page-content -->

             <!-- Footer-->
             <%- include('./footer.ejs') %>
          </div>
          <!-- end main content-->

      </div>
